/* pages/about/about.wxss */
.aboutPageContainer {
  background-color: #f8f8f8;
  padding: 0 0 10px 0;
}

.blockContainer {
  margin-top: 10px;
  width: 100%;
  background-color: white;
  border-radius: 10px;
}

.swiper {
  border-radius: 10px;
  width: 100vw;
  height: 66.67vw;
}

.imageContainer {
  width: 100%;
  border-radius: 10px 10px 0 0;
  position: relative;
}

.image {
  width: 100%;
  height: 100%;
  box-shadow: 3px 3px 2px #f8f8f8;
}

.text {
  font-size: 16px;
  line-height: 24px;
  padding: 10px;
}