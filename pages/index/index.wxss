/**index.wxss**/

.invatationPageContainer {
  background-color: #f8f8f8;
  padding: 10px 0;
}

.blockContainer {
  width: 100%;
  background-color: white;
  padding: 10px;
}

.title {
  font-size: 24px;
  height: 36px;
  line-height: 36px;
  display: block;
  width: 100%;
  font-weight: bold;
}

.invatationItemContainer {
  margin-top: 10px;
  width: 100%;
  height: 0;
  padding-top: 100%;
  position: relative;
}

.invatationItem {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.invatationItemContainer.map {
  padding-top: 200px;
}
.invatationItem.map {
  width: 95%;
  height: 200px;
}

.marginTopFix {
  margin-top: 10px;
}
